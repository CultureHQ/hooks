{
  "name": "@culturehq/hooks",
  "version": "0.1.2",
  "description": "A set of reusable react hooks",
  "main": "dist/hooks.js",
  "module": "src/hooks.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint --ext .ts --ignore-pattern /dist/* .",
    "prepublishOnly": "rm -rf dist && yarn build --declaration",
    "test": "chq-scripts test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CultureHQ/hooks.git"
  },
  "author": "Kevin Deisz",
  "license": "MIT",
  "keywords": [
    "react"
  ],
  "bugs": {
    "url": "https://github.com/CultureHQ/hooks/issues"
  },
  "homepage": "https://github.com/CultureHQ/hooks#readme",
  "peerDependencies": {
    "react": ">= 16.8",
    "react-dom": ">= 16.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@culturehq/scripts": "^3.1.0",
    "@testing-library/react": "^9.1.3",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-test-renderer": "^16.9.0",
    "typescript": "^3.5.3"
  },
  "eslintConfig": {
    "extends": [
      "@culturehq",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        "error",
        {
          "allowExpressions": true,
          "allowHigherOrderFunctions": true
        }
      ],
      "@typescript-eslint/no-explicit-any": "off"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".ts"
          ]
        }
      }
    }
  },
  "jest": {
    "testRegex": "\\.test\\.(j|t)sx?$"
  }
}
